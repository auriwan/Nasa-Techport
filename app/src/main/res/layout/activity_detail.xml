<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.DetailActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title_project"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/responsible_nasa_program"
                    android:text="@string/title_news"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/responsible_nasa_program"
                    app:layout_constraintTop_toBottomOf="@id/title_project"
                    app:layout_constraintStart_toStartOf="parent"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@android:color/darker_gray"
                    android:text="@string/source_news"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/last_updated"
                    app:layout_constraintTop_toBottomOf="@id/responsible_nasa_program"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:paddingStart="20dp"
                    android:fontFamily="@font/poppins_light"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:paddingEnd="30dp"
                    android:layout_marginBottom="16dp"
                    android:text="@string/date_news"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/description_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/last_updated"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="16sp"
                    android:padding="20dp"
                    android:text="@string/lorem_ipsum"/>
                <TextView
                    android:id="@+id/go_to_link"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="2dp"
                    android:textSize="16sp"
                    android:background="@drawable/bg_link"
                    android:text="@string/go_to_official_website"
                    app:layout_constraintTop_toBottomOf="@id/description_project"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:fontFamily="@font/poppins_medium"
                    android:textColorLink="@android:color/holo_blue_dark"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>